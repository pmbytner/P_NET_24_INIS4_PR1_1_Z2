<Window
        x:Class="P_NET_24_INIS4_PR1_1_Z2.PotwierdźUsunięcieOsoby"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:P_NET_24_INIS4_PR1_1_Z2"
    mc:Ignorable="d"
        
    Title="Usuwanie"
    FontSize="20"
    Height="200"
    Width="300"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock
            Grid.ColumnSpan="2"
            TextWrapping="Wrap"
            >
            Czy na pewno chcesz usunąć osobę:
        </TextBlock>
        <TextBlock
            Grid.ColumnSpan="2"
            Grid.Row="1"
            TextWrapping="Wrap"
            Text="{Binding Format}"
            />

        <Button
            Grid.Row="2" Click="Potwierdź"
            >
            Potwierdź
        </Button>
        <Button
            Grid.Column="1"
            Grid.Row="2" Click="Anuluj"
            >
            Anuluj
        </Button>
    </Grid>
</Window>
